{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "lib",
    "allowJs": false,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "stripInternal": true,
    "suppressExcessPropertyErrors": true,
    "jsx": "react",
    "lib": [
			"es6",
			"dom"
		]
  },
  "exclude": [
    "node_modules", "lib", "playground"
  ]
}